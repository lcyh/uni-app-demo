.pubClass {
  width: 90%;
  margin: 20px auto;
}
.pubClass .til {
  padding: 10px;
  font-size: 20px;
  background: #FFF;
}
.pubClass .list_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.pubClass .list_box .list_item {
  background: #FFF;
  width: 49%;
  text-align: center;
  margin-bottom: 8px;
  box-shadow: 0px 2px 2px 0px #ccc;
}
.pubClass .list_box .list_item .img {
  width: 100%;
  height: 200px;
}
.pubClass .list_box .list_item .text {
  display: block;
  margin: 10px 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 5px;
  font-size: 16px;
}

