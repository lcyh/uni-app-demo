page {
  background-color: #dfe7e7;
}
.swiper_box {
  height: 180px;
  width: 90%;
  margin: auto;
  overflow: hidden;
  border-radius: 10px;
  background-color: #eee;
}
.swiper_box .swiper {
  height: 100%;
}
.swiper_box .swiper image {
  width: 100%;
}
.video {
  width: 90%;
  margin: 10px auto 20px;
  box-shadow: 0px 2px 13px 5px #ccc;
  background-color: #fff;
  text-align: center;
}
.video .video_box {
  position: relative;
}
.video .video_box image {
  width: 100%;
}
.video .video_box .play_icon {
  width: 80px;
  height: 80px;
  position: absolute;
  z-index: 10;
  left: 50%;
  top: 50%;
  margin: -40px auto auto -40px;
}
.video .video_box .play_icon image {
  width: 100%;
  height: 100%;
}
.video .til {
  font-size: 30px;
  margin-bottom: 20px;
  padding-top: 20px;
  text-align: center;
}

